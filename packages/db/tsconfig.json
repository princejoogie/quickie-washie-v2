{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@umamin/db",
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "dist"]
}
